<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient2"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Помощь"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="44dp"
        android:text="     Приложение Бизнесс ассистент предназначено для помощи людям в следующих областях:\n
         - информирование о текущем курсе валют(база данных обновляется в реальном времени);\n
         - предоставление информации о самом выгодном банке Украины для депозита;\n
         - просмотр текущей температуры воздуха согласно местоположению устрйоства;\n
         - Конвертер валют (в разработке);
"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Голосовые команды"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_above="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     Ключевые слова:\n
         - Курс валют: доллар, евро, рубль;\n
         - Погода: погода, температура;\n
         - Выгодный депозит: депозит, банк;\n
"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />
</RelativeLayout>